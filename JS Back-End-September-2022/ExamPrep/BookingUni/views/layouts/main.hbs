<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <title>{{#if title}}{{title}}{{else}}BookingUni{{/if}}</title>
    <link rel="stylesheet" href="/static/css/style.css" />
  </head>

  <body>
    <div id="container">
      
        <div>
            {{!-- <div class="notification loadingBox">
                Loading â€¦
            </div>
            <div class="notification infoBox">
                <span>Info</span>
            </div> --}}
            {{#if error}}
            <div class="notification errorBox">
                {{#each error.messages}}<span>{{this}}</span><br>{{/each}}
            </div>
            {{/if}}
        </div>

      <nav>
        <div class="left-container">
          <ul>
            <li><a href="/">Home</a></li>
            {{#unless logged}}
              <li><a href="/auth/login">Login</a></li>
              <li><a href="/auth/register">Register</a></li>
            {{else}}
              <li><a href="/hotel/create">Add +</a></li>
            {{/unless}}
          </ul>
        </div>
        {{#if logged}}
          <div class="right-container">
            <a href="" class="log-out">{{username}}</a>
            <a href="/auth/logout" class="log-out">Logout</a>
          </div>
        {{/if}}
      </nav>

      {{{body}}}

      <footer>@SoftUni - JS Back-end - BookingUni 2020</footer>
    </div>

  </body>

</html>