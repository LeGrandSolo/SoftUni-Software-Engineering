<main><section id="user">
    {{#with user}}
  <div class="user-info">
    <div class="user-logo">
      <img src="/static/images/user-logo.webp" />
    </div>
    <h1 class="user-email">{{email}}</h1>
    <h2 class="created-blogs-count">Total Created Blogs: {{blogsCreated.length}}</h2>
    <h2 class="followed-blogs-count">Total Followed Blogs:
      {{blogsFollowed.length}}</h2>
  </div>
</section>
<section class="profile-blogs">
  <div class="created-blogs">
    <h2 class="section-title">Created Blogs</h2>
    {{#if blogsCreated}}{{#each blogsCreated}}{{>blogPartial}}{{/each}}
    {{else}}
      <h2 class="no-blog-in-profile">You haven't published a blog yet...</h2>
    {{/if}}
  </div>

  <div class="followed-blogs">
    <h2 class="section-title">Followed Blogs</h2>
    {{#if blogsFollowed}}
      {{#each blogsFollowed}}{{>blogPartial}}{{/each}}
      <h2 class="no-blog-in-profile">You have no blogs followed yetâ€¦</h2>
    {{/if}}
  </div>
  {{/with}}
</section></main>